<% @iterations.each do |iteration| %>
  <section class="iterations-list">
    <aside>
      <div class="iteration">
        <div>
          <figure>
            <img srcset="<%= image_path("pin-green.png") %> 2x"/>
          </figure>
          <div class="name">
            <h2>Iteration <%= iteration.number %></h2>
            <small>Team Strength <%= (iteration.team_strength * 100).to_i %>%</small>
          </div>
        </div>
      </div>
    </aside>
    <div class="stories green">

      <% iteration.stories.each do |story| %>
        <% local_story = Story.find_by_external_ref(story.to_param) %>
        <div class="story <%= "tracked" if local_story && current_user.following?(local_story) %>" data-local="<%= local_story ? 'true' : 'false' %>">
          <div class="stats">
            <div class="row">

              <div class="item watch">
                <% if local_story.present? %>
                  <% if current_user.following?(local_story) %>
                    <a class="unfollow" href="<%= story_follow_path(local_story) %>"> <span class="fa fa-eye-slash"></span>Unfollow</a>
                  <% else %>
                    <a class="follow" href="<%= story_follow_path(local_story) %>"><span class="fa fa-eye"></span>Follow</a>
                  <% end %>
                <% end %>
              </div>

              <div class="item updated">
                <span class="fa fa-clock-o"></span><%= time_ago_in_words(story.updated_at) %>
              </div>

              <div class="item type">
                <%= story_type_icon(story.story_type) %>
              </div>

              <div class="item risk">
                <span class="fa fa-signal"></span><%= calculate_risk(story.estimate).titleize %>
              </div>

              <div class="item author">
                <span class="fa fa-user"></span>jsmestad
              </div>
              <div class="item external-link">
                <a class="external" data-url="<%= story_path(local_story) if local_story.present? %>"><span class="fa fa-external-link"></span>More</a>
              </div>
            </div>
          </div>
          <div class="body">
            <div>
              <div>
                <h3><%= story.name %></h3>

              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>

<% end %>
