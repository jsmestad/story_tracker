= link_to 'Propose Story', new_story_path, class: 'button'

%hr/
- @iterations.each do |iteration|
  %h2 Iteration #{iteration.number}
  - if iteration.is_current?
    This is the current iteration
  - elsif iteration.is_past?
    This iteration is over
  - elsif iteration.is_future?
    This is a future iteration
  %div Started on #{iteration.start.strftime('%b %d')}
  %div Finished on #{iteration.finish.strftime('%b %d')}
  %div Stream strength is planned on #{(iteration.team_strength * 100).to_i}%

  %ul
    - iteration.stories.each do |story|
      %li #{story.name}
      -# (#{link_to 'propose additional story', new_iteration_story_path(iteration)})
