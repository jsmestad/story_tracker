%tr
  %td
    = user.name
  %td
    = user.username
  %td
    = simple_form_for user do |f|
      = f.input :role, collection: User.roles.keys.map {|role| [role.titleize,role]}, include_blank: false
      = f.submit
  %td
    - unless user == current_user
      = link_to "Delete", user_path(user), data: { confirm: "Are you sure?" }, method: :delete
